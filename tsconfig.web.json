{
    "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include": [
        "src/shell/app/**/*",
        "src/shared/**/*",
        "electron.vite.config-browser.mts",

        "src/renderer/src/vite-typescript/env.d.ts",
        "src/renderer/src/vite-typescript/svg-icon-type.d.ts",
        "src/renderer/src/vite-typescript/lib.es5.d.ts",

        "src/renderer/src/**/*",
        "src/renderer/src/**/*.tsx",
        "src/shell/preload/*.d.ts",

        "src/shell/xternal-to-renderer/index.ts",
        "src/shell/xternal-to-renderer/1-gates/gate-main-incoming-calls.ts",
        "src/shell/xternal-to-renderer/1-gates/gate-main-incoming-invoke.ts",
        "src/shell/xternal-to-renderer/1-gates/main-to-renderer.ts",
        "src/shell/xternal-to-renderer/commands",
        "src/shell/xternal-to-renderer/7-napi-calls/**/*.ts", "src/shell/xternal-to-renderer/2-commands/10-open-file-dialog", "src/shell/xternal-to-renderer/2-commands/1-set-saw-mode-on-main.ts", "src/shell/xternal-to-renderer/2-commands/index.ts",
    ],
    "compilerOptions": {
        "composite": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,

        "paths": {
            "@/*":       [ "./src/renderer/src/*" ],
            "@ui/*":     [ "./src/renderer/src/ui/*" ],
            "@shell/*":  [ "./src/shell/app/*" ],
            "@shared/*": [ "./src/shared/*" ],

            "@renderer/*": [ "./src/renderer/src/*" ],
        },

        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM", "DOM.Iterable", "DOM.AsyncIterable"],
    },
}
