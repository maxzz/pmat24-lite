{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Main Process",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron-vite",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron-vite.cmd"
            },
            "runtimeArgs": [
                "--sourcemap"
            ],
            "env": {
                "REMOTE_DEBUGGING_PORT": "9222"
            }
        },
        {
            "name": "Debug Renderer Process",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/src/renderer",
            "timeout": 60000,
            "presentation": {
                "hidden": true
            }
        },
        {
            "name": "localhost:3000",
            "url": "http://localhost:3000",
            "request": "launch",
            "type": "chrome",
            "webRoot": "${workspaceFolder}/src/renderer",
            "runtimeArgs": ["--preserve-symlinks"],
            "timeout": 60000,
        },

        {
            "name": "debug vite build",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/vite/bin/vite.js",
            "runtimeArgs": [
                "--preserve-symlinks",
                // "--preserve-symlinks-main", // This is breaking the build
            ],
            "args": [
                "--config",
                "electron.vite.config-browser.mts",
                // "electron.vite.config-browser.mjs", // built with 'tsc electron.vite.config-browser.mts'
                // "--force",
                "--outDir",
                "../../dist",
                "--emptyOutDir",
                "build",
            ]
        },

        {
            "name": "debug electron.vite build",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/electron-vite/bin/electron-vite.js",
            "runtimeArgs": [
                // "--preserve-symlinks",
                // "--preserve-symlinks-main", // This is breaking the build
            ],
            "args": [
                "build",
            ]
        },

        {
            "name": "Debug i18n-ast extraction",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect-brk"
            ],
            "args": [
                "${workspaceRoot}/scripts/i18n-ast/0-main.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },

        {
            "name": "Debug i18n-ast extraction (custom config)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect-brk"
            ],
            "args": [
                "${workspaceRoot}/scripts/i18n-ast/0-main.ts",
                "--config",
                "extract-i18n-config.json"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },

        {
            "name": "Debug i18n-ast extraction (test output)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect-brk"
            ],
            "args": [
                "${workspaceRoot}/scripts/i18n-ast/0-main.ts",
                "--output",
                "./scripts/i18n-strings-ast-debug.json",
                "--min-length",
                "5"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Debug All",
            "configurations": [
                "Debug Main Process",
                "Debug Renderer Process"
            ],
            "presentation": {
                "order": 1
            }
        }
    ]
}
