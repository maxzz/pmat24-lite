{
    "tailwindCSS.experimental.classRegex": [
        ["Classes \\=([^;]*);", "'([^']*)'"],
        ["Classes \\=([^;]*);", "\"([^\"]*)\""],
        ["Classes \\=([^;]*);", "\\`([^\\`]*)\\`"],

        ["classNames\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"]
    ],
    "files.associations": {
        "*.json5": "jsonc"
    },
    
    // 'how to debug the electron-vite process with vscode'
    "debug.javascript.terminalOptions": {
        "resolveSourceMapLocations": [
            "${workspaceFolder}/**",
            "**/node_modules/**",
            
            // "! **/node_modules/**",
            "**/node_modules/.vite-temp/**"
        ]
    }
}
