{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "src/electron/app/**/*",
        "src/electron/preload/**/*",
        "src/electron/app/start-main-window",
        "src/electron/app/ipc-main",
        "src/renderer/src/shared/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "types": [
            "electron-vite/node"
        ],
        "paths": {
            "@shared/*": [
                "./src/renderer/src/shared/*"
            ]
        }
    },
}