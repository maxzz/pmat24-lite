{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "./src/shell/app/**/*",
        "./src/shell/preload/**/*",
        "./src/renderer/src/vite-typescript/**/*",
        "./src/shared/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "types": [
            "electron-vite/node"
        ],
        "paths": {
            "@/*": [
                "./src/renderer/src/*"
            ],
            "@ui/*": [
                "./src/renderer/src/ui/*"
            ],
            "@electron/*": [
                "./src/shell/app/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ]
        }
    },
}